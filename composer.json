{
    "name": "webgarden/termite",
    "description": "Toolkit for MantisBT plugins development",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrzej Kupczyk",
            "email": "kontakt@andrzejkupczyk.pl"
        }
    ],
    "support": {
        "issues": "https://github.com/thewebgarden/termite/issues"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/mantisbt/mantisbt",
            "no-api": true
        },
        {
            "type": "vcs",
            "url": "https://github.com/mantisbt/securimage",
            "no-api": true
        }
    ],
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "mantisbt/mantisbt": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "WebGarden\\Termite\\": "src/"
        },
        "files": [
            "core/termite_api.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.0.0",
            "ext-gd": "2.3.3"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "minimum-stability": "dev"
}
